# ============================================================================
# CitrineOS Operator UI - Environment Variables
# ============================================================================
# Скопіюйте цей файл як .env:
#   cp .env.example .env
# ============================================================================

# Hasura Admin Secret (має збігатися з HASURA_GRAPHQL_ADMIN_SECRET в docker-compose.yml)
VITE_HASURA_ADMIN_SECRET=CitrineOS!

# GraphQL API URLs
VITE_API_URL=http://localhost:8090/v1/graphql
VITE_WS_URL=ws://localhost:8090/v1/graphql

# CitrineOS Core API
VITE_CITRINE_CORE_URL=http://localhost:8080

# MinIO File Server
VITE_FILE_SERVER_URL=http://localhost:9000

# Default Admin Credentials
VITE_ADMIN_EMAIL=admin@citrineos.com
VITE_ADMIN_PASSWORD=P@ssword@1

# Optional: Google Maps API Key (для відображення локацій на карті)
VITE_GOOGLE_MAPS_API_KEY=
